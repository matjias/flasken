<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/drinksAmountField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="32dp"
        android:layout_toRightOf="@+id/drinksAmountText"
        android:layout_marginLeft="40dp"
        android:text="0" />
    <TextView
        android:id="@+id/drinksPercentageField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/estimatedBACField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/estimatedTimeUntilSoberField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/drinksAmountText" />
    <Spinner
        android:id="@+id/drinkTypeSpinner"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weightField"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/weightField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Drinks"
        android:id="@+id/drinksAmountText"
        android:layout_marginStart="31dp"
        android:textSize="32dp"
        android:layout_alignParentStart="false"
        android:layout_marginTop="50dp" />
</RelativeLayout>