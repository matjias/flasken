<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50sp"
    android:layout_marginTop="50sp"
    android:layout_marginRight="30sp"
    android:layout_marginLeft="30sp" >

    <View
        android:name="popup"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/menu_bg"
        android:id="@+id/menuBox"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </View>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:background="#808080"
        android:layout_alignBottom="@+id/statistics_button"
        android:layout_alignLeft="@+id/statistics_button"
        android:layout_alignStart="@+id/statistics_button"
        android:layout_alignRight="@+id/options_button"
        android:layout_alignEnd="@+id/options_button" />

    <Button
        android:id="@+id/statistics_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:textSize="20sp"
        android:textColor="#FFFFFFFF"
        android:background="@color/popup"
        android:layout_below="@+id/cameraButton"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/options_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Options"
        android:textSize="20sp"
        android:textColor="#FFFFFFFF"
        android:layout_alignTop="@+id/statistics_button"
        android:background="@null"
        android:layout_alignBottom="@+id/statistics_button"
        android:layout_toRightOf="@+id/statistics_button"
        android:layout_alignRight="@+id/nameEdit"
        android:layout_alignEnd="@+id/nameEdit" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/cameraButton"
        android:background="@drawable/player_default_picture"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/nameEdit"
        android:layout_toStartOf="@+id/nameEdit" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/nameEdit"
        android:gravity="center"
        android:layout_alignTop="@+id/cameraButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/cameraButton" />

    <fragment android:id="@+id/tab_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statistics_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/continue_button" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/continue_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:textSize="36dp"
        android:text="Continue" />
</RelativeLayout>
